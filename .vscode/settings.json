{
  // Formatting and coding standards
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.documentSelectors": ["**/*.astro"],

  // General file exclusions
  "files.exclude": {
    "**/node_modules": true,
    "**/pnpm-lock.yaml": true,
    "**/.astro": true,
    "**/env.d.ts": true
  },

  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ]
}
