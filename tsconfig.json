{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
